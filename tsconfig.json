{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["bin", "lib", "__mocks__"],
    "exclude": ["**/*.test.js"]
}
